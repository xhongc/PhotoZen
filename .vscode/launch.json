{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "PhotoZen",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "127.0.0.1:8000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/moment/manage.py",
            "justMyCode": false
        },
        {
            "name": "Vue Frontend",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/web"
        },
        {
            "name": "Tailwind CSS Watch",
            "type": "node-terminal",
            "request": "launch",
            "command": "npx tailwindcss -i ./src/input.css -o ./src/output.css --watch",
            "cwd": "${workspaceFolder}/web"
        },
        {
            "name": "Django Shell Plus",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/moment/manage.py",
            "args": [
                "shell_plus",
            ]
        }
    ],
    "compounds": [
        {
            "name": "启动所有服务",
            "configurations": [
                "PhotoZen",
                "Vue Frontend", 
                "Tailwind CSS Watch",
            ],
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            },
            "stopAll": true
        }
    ]
}